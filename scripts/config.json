{
  "version": "0.1",
  "scripts": [
    {
      "documentation": {
        "command": "generate-key",
        "description": "Generate a key for a pair of bestuurseenheid and vendor",
        "arguments": ["vendorUri", "besuurseenheidUri", "key", "passwordSalt"]
      },
      "environment": {
        "image": "ubuntu",
        "interactive": false,
        "script": "generate-key/run.sh"
      },
      "mounts": {
        "app": "/data/app/"
      }
    },
    {
      "documentation": {
        "command": "create-mandatarissen",
        "description": "Create a few mandatarissen for a bestuurseenheid",
        "arguments": []
      },
      "environment": {
        "image": "everpeace/curl-jq",
        "interactive": false,
        "join_networks": true,
        "script": "create-mandatarissen/run.sh"
      },
      "mounts": {
        "app": "/data/app/"
      }
    }
  ]
}
